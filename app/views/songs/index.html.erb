<div>
  <div>
    <h1>
      Your Songs
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Title
        </th>

        <th>
         Artist
        </th>

        <th>
        Playlist
        </th>

        <th>
        Created at
        </th>

        <th>
        Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_songs.each do |a_song| %>
      <tr>

        <td>
          <%= a_song.title %>
        </td>

        <td>
          <%= a_song.artist %>
        </td>

        <td>
          <%= a_song.playlist.title %>
        </td>


        <td>
          <%= time_ago_in_words(a_song.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_song.updated_at) %> ago
        </td>

        <td>
          <a href="/songs/<%= a_song.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new song
    </h2>

    <form action="/insert_song" method="post">

      <div>
        <label for="title_id_box">
          Title
        </label>

        <input type="text" id="title_id_box" name="query_title_id">
      </div>

      <div>
        <label for="artist_id_box">
          Artist
        </label>

        <input type="text" id="artist_id_box" name="query_artist_id">
      </div>

      <div>

      <label for="playlist_id_box">
          Add to Playlist
        </label>
  
      <select id="playlist_id_box" name="query_playlist_id">
          <% @current_user.playlists.order(:title).each do |a_playlist| %>
            <option value="<%= a_playlist.id %>">
              <%= a_playlist.title %>
            </option>
          <% end %>
        </select>
      </div>

      <button>
        Add Song
      </button>
    </form>
  </div>
</div>

<div>
  <div>
    <h1>
      Your <%= @the_mood.label %> Playlists
    </h1>

    <hr>
    
    <dl>
      <dt class="mb-2">
        Playlists
      </dt>
      <dd>
        <% @the_mood.playlists.all.each do |a_playlist| %>
        <a href="/playlists/<%= a_playlist.id %>" class="list-group-item list-group-item-action col-sm-2">
          <li class="list-group">
          <%= a_playlist.title%>
          </li>
        </a>
        <% end %>
      </dd>


    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <div class="mb-2">
      <h2>
        Edit mood
      </h2>
    </div>

    <form action="/modify_mood/<%= @the_mood.id %>"  method="post" >
      <div class="mb-2">
        <label for="title_id_box">
          Title
        </label>

        <input type="text" id="title_id_box" name="query_title" value="<%= @the_mood.label %>">
      </div>

      <button class="btn btn-outline-dark btn-sm mb-2">
        Update Mood
      </button>
    </form>

  </div>
    <div>
        <a href="/delete_mood/<%= @the_mood.id %>">
        <button class="btn btn-outline-danger btn-sm">
          Delete Mood
          </button>
        </a>
      </div>

</div>

